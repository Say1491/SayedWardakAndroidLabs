<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MessageGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Message Goes Here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TimeGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Time Goes Here"
        app:layout_constraintStart_toStartOf="@+id/MessageGoesHere"
        app:layout_constraintTop_toBottomOf="@+id/MessageGoesHere" />

    <TextView
        android:id="@+id/SendReceiveGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="send receive goes here"
        app:layout_constraintStart_toStartOf="@+id/TimeGoesHere"
        app:layout_constraintTop_toBottomOf="@+id/TimeGoesHere" />

    <TextView
        android:id="@+id/DatabaseIDGoesHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Database id goes here"
        app:layout_constraintStart_toStartOf="@+id/SendReceiveGoesHere"
        app:layout_constraintTop_toBottomOf="@+id/SendReceiveGoesHere" />
</androidx.constraintlayout.widget.ConstraintLayout>